<div class="container portal">
    <div class="row">
        <div class="col l6 m10 s12 offset-l3 offset-m1 portal-login">
            <div class="row text-align">
                <div class="col s10 offset-s1">
                    <div class="center-align">
                        <h5>Acceseaza contul</h5>
                        <span class="red-text" style="font-size: 11px;">*Aveti nevoie de numarul matricol si parola primita dupa admitere</span>
                    </div>
                </div>
            </div>
            <form action="{{ path_for('postLogin') }}" method="post">
                <div class="row">
                    <div class="input-field col s10 offset-s1">
                        <input name="nrmatricol" id="nrmatricol" type="text" placeholder="Introduceti numarul matricol">
                        <label class="active" for="nrmatricol">Numar Matricol</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s10 offset-s1">
                        <input name="password" id="password" type="password" placeholder="Introduceti parola">
                        <label class="active" for="password">Parola </label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s10 offset-s1">
                        <button class="waves-effect waves-light btn" type="submit">Autentificare</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
